<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.local.demointent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ValidaLoginActivity" />
        <activity android:name=".MainActivity"></activity>

        <receiver android:name=".broadcastreceiver.MyReceiver">
            <intent-filter>
                <action android:name="android.app.action.LOGIN_SUCESSO"/>

            </intent-filter>
        </receiver>

        <receiver android:name=".broadcastreceiver.AlarmeReceiver"/>

    </application>

</manifest>